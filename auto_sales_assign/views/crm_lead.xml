    <data>
        <record id="crm_lead_form_inherit" model="ir.ui.view">
            <field name="name">crm_lead_form_inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
<!--                    <header>-->
                        <button name="action_assign_leads" string="Assign Leads" type="object" class="btn-primary"/>
<!--                    </header>-->
                </xpath>
                <xpath expr="//field[@name='phone']" position="replace">
<!--                    <label for="phone"/>-->
                    <div class="0-row">
                        <field name="phone"/>
                        <button help="Send WhatsApp for Web" icon="fa-whatsapp" invisible="phone == False" name="open_whatsapp_web" style="color:#25D366;border:none" type="object"/>
                        <button help="Send WhatsApp for Mobile" icon="fa-whatsapp" invisible="phone == False" name="open_whatsapp_mobile" style="color:#d3254e;border:none" type="object"/>
                    </div>
                </xpath>
                 <xpath expr="//field[@name='tag_ids']" position="after">
                     <field name="destination"/>
                     <field name="travel_date"/>
                     <field name="platform"/>
                 </xpath>
            </field>
        </record>

